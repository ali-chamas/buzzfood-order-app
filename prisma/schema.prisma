model Category{
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  title String
  desc String
  img String
  color String
  slug String @unique
  Products Product[]
}
model Product{
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  title String
  img String?
  desc String?
  price Decimal
  isFeatured Boolean @default(false)
  options Json[]
  Category Category @relation(fields: [CatSlug],references: [slug])
  CatSlug String
}

model Managers{
  id String @id @default(cuid())
  username String @unique
  password String
  
}
model Offer{
  id String @id @default(cuid())
  message String
}
